{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Next.js",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect"],
      "args": ["${workspaceFolder}/node_modules/next/dist/bin/next", "dev"],
      "port": 3000,
      "protocol": "inspector",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
